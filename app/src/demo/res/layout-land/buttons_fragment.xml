<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mainpkg.ButtonsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:rowCount="5"
    android:columnCount="4"
    android:layout_gravity="bottom"
    android:background="@color/colorAccent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/one"
        android:background="@drawable/light_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        style="?android:attr/borderlessButtonStyle"

        />
    <Button
        android:id="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:text="@string/two"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_column="2"
        android:layout_row="3"
        android:text="@string/three"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/four"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_column="1"
        android:layout_row="2"
        android:text="@string/five"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/button6"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:text="@string/six"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/seven"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:layout_column="1"
        android:layout_row="1"
        android:text="@string/eight"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_column="2"
        android:layout_row="1"
        android:text="@string/nine"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button0"
        android:layout_column="0"
        android:layout_row="4"
        android:text="@string/zero"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_sum"
        android:layout_column="3"
        android:layout_row="4"
        android:text="@string/sum"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/dark_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/button_sub"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:background="@drawable/dark_button"
        android:text="@string/sub"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_mul"
        android:layout_column="3"
        android:layout_row="2"
        android:text="@string/mul"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/dark_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_div"
        android:layout_column="3"
        android:layout_row="1"
        android:text="@string/div"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/dark_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_erase"
        android:layout_column="3"
        android:layout_row="0"
        android:text="@string/backspace"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/dark_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_perc"
        android:layout_column="2"
        android:layout_row="0"
        android:text="@string/percent"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/dark_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_dot"
        android:layout_column="1"
        android:layout_row="4"
        android:text="@string/dot"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/light_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_eq"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:text="@string/equals"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_open_bracket"
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/open_bracket"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/dark_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_close_bracket"
        android:layout_column="1"
        android:layout_row="0"
        android:text="@string/close_bracket"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/dark_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:textSize="18sp"
        android:padding="15dp"/>
</GridLayout>